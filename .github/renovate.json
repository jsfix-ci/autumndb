{
  "extends": [
    "github>product-os/jellyfish-config//config/renovate"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies",
        "peerDependencies"
      ],
      "matchPackagePatterns": ["@balena/jellyfish-*"],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["^@json-schema-org"],
      "groupName": "json-schema-org"
    }
  ]
}
