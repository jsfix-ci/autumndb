{
  "name": "@balena/jellyfish-core",
  "version": "3.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-core.git"
  },
  "engines": {
    "node": ">=12.5.0"
  },
  "description": "Core library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint --typescript lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=shellcheck,@types/jest",
    "lint-fix": "balena-lint --typescript --fix lib",
    "unit": "jest lib",
    "integration": "jest test",
    "test": "catch-uncommitted --skip-node-versionbot-changes && npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint-fix",
      "git add ."
    ]
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.36",
    "@balena/jellyfish-environment": "^4.1.28",
    "@balena/jellyfish-logger": "^2.1.92",
    "@balena/jellyfish-metrics": "^1.0.244",
    "@types/bluebird": "^3.5.35",
    "@types/debounce-promise": "^3.1.3",
    "@types/pg-format": "^1.0.1",
    "@types/redis": "^2.8.28",
    "@types/redis-mock": "^0.17.0",
    "@types/traverse": "^0.6.32",
    "bluebird": "^3.7.2",
    "debounce-promise": "^3.1.2",
    "fast-equals": "^2.0.3",
    "fast-json-patch": "^2.2.1",
    "json-e": "^4.4.1",
    "json-schema": "^0.3.0",
    "json-schema-deref-sync": "^0.14.0",
    "lodash": "^4.17.21",
    "pg-format": "^1.0.4",
    "pg-promise": "^10.10.2",
    "redis": "^3.1.2",
    "redis-mock": "^0.56.3",
    "skhema": "^5.3.4",
    "traverse": "^0.6.6",
    "typed-error": "^3.2.1",
    "uuid": "^8.3.2",
    "uuid-v4-regex": "^1.0.2"
  },
  "devDependencies": {
    "@balena/ci-task-runner": "^0.2.156",
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-types": "^0.5.132",
    "@balena/lint": "^5.4.2",
    "@json-schema-org/tests": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/uuid": "^8.3.0",
    "catch-uncommitted": "^2.0.0",
    "depcheck": "^1.4.1",
    "deplint": "^1.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "simple-git-hooks": "^2.4.1",
    "ts-jest": "^26.5.6",
    "typedoc": "^0.20.36",
    "typescript": "^4.3.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
