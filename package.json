{
  "name": "@balena/jellyfish-core",
  "version": "7.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-core.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Core library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=shellcheck,@types/jest,typedoc",
    "lint:fix": "balena-lint --fix lib",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest lib",
    "test:integration": "jest test",
    "test:compose": "DOCKER_BUILDKIT=1 docker build -t balena/jellyfish-sut:latest --secret id=npmrc,src=.balena/secrets/npmrc.txt . && docker-compose -f docker-compose.test.yml -f docker-compose.yml up --exit-code-from=sut",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck",
    "compose": "docker-compose up"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.68",
    "@balena/jellyfish-environment": "^5.0.6",
    "@balena/jellyfish-logger": "^3.0.89",
    "@balena/jellyfish-metrics": "^1.0.348",
    "@jsbits/get-package-version": "^1.0.3",
    "bluebird": "^3.7.2",
    "fast-equals": "^2.0.3",
    "fast-json-patch": "^3.1.0",
    "json-e": "^4.4.1",
    "json-schema": "^0.3.0",
    "json-schema-deref-sync": "^0.14.0",
    "lodash": "^4.17.21",
    "pg-format": "^1.0.4",
    "pg-promise": "^10.11.1",
    "redis": "^3.1.2",
    "redis-mock": "^0.56.3",
    "semver": "^7.3.5",
    "skhema": "^5.3.4",
    "stopword": "^1.0.11",
    "traverse": "^0.6.6",
    "typed-error": "^3.2.1",
    "uuid": "^8.3.2",
    "uuid-v4-regex": "^1.0.2"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.3",
    "@balena/jellyfish-config": "^1.5.1",
    "@balena/jellyfish-types": "^1.2.0",
    "@balena/lint": "^6.1.1",
    "@json-schema-org/tests": "^1.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.0.2",
    "@types/json-schema": "^7.0.9",
    "@types/pg-format": "^1.0.2",
    "@types/redis": "^2.8.32",
    "@types/redis-mock": "^0.17.0",
    "@types/semver": "^7.3.9",
    "@types/traverse": "^0.6.32",
    "@types/uuid": "^8.3.1",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "simple-git-hooks": "^2.6.1",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.6",
    "typescript": "^4.4.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2021-10-23T02:36:49.364Z"
  }
}
